@model DataSurvey.Models.Student
@{
    ViewData["Title"] = "Student Make A Survey";

    // Get students from ViewBag
    var students = ViewBag.Students as List<DataSurvey.Models.Student>;

    // Declare selectedStudentId once
    int selectedStudentId = 0;

    // Safely parse from ViewBag
    if (ViewBag.SelectedStudentId != null)
    {
        int.TryParse(ViewBag.SelectedStudentId.ToString(), out selectedStudentId);
    }

    // Find the selected student
    var selectedStudent = students?.FirstOrDefault(s => s.StudentId == selectedStudentId);
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>
    <p>Welcome, please select your Teachers for this semester</p>
</div>

<form method="get" asp-action="Student" asp-controller="Student" class="text-center">
    <div class="form-group mb-4">
        <label for="StudentId">Select Student:</label>
        <select id="StudentId" name="studentId" class="form-control"
                style="max-width: 300px; margin: 0 auto;"
                onchange="this.form.submit()">
            <option value="">-- Select a student --</option>
            @foreach (var student in students)
            {
                <option value="@student.StudentId">@student.Name</option>
            }
        </select>
    </div>
</form>

<form asp-action="SubmitSurvey" method="post" class="text-center">
    <input type="hidden" name="StudentId" value="@selectedStudentId" />

    @if (selectedStudent != null)
    {
        <div class="mt-2 mb-4">
            <strong>Selected Student:</strong> @selectedStudent.Name (ID: @selectedStudent.StudentId)
        </div>
    }

    <div class="container mt-4">
        <div class="row text-start">
            @if (ViewBag.Instructors != null && ((List<DataSurvey.Models.Instructor>)ViewBag.Instructors).Count > 0)
            {
                @foreach (var instructor in ViewBag.Instructors)
                {
                    <div class="col-md-3 mb-2">
                        <input type="checkbox" name="SelectedInstructors" value="@instructor.InstructorId" />
                        @instructor.Name
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No instructors available for the selected student's programs.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Home</a>
    </div>
</form>
