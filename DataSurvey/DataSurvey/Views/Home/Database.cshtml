@{
    ViewData["Title"] = "Database";
}
@model IEnumerable<DataSurvey.Models.Survey>

<h2>Data Analytics</h2>
<p>Select a survey to analyze:</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Survey Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SurveyId</td>
                <td>@s.SurveyName</td>
                <td>
                    <a asp-action="SurveyAnalytics" asp-route-id="@s.SurveyId" class="btn btn-primary">View Data</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Optional: Return Home -->
<div style="margin-top: 20px;">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</div>
