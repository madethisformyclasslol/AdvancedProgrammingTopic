@model List<DataSurvey.Models.Survey>

@if (Model == null || !Model.Any())
{
    <p>No surveys found.</p>
}
else
{
    <div class="text-center">
        <h2>Here’s your survey</h2>

        @{
            var recent = Model.First();
        }

        <table class="table mx-auto" style="width: auto;">
            <tr>
                <td>@recent.SurveyName</td>
                <td>
                    <a asp-action="TakeSurvey" asp-controller="Survey" asp-route-id="@recent.SurveyId" class="btn btn-primary">
                        Take Survey
                    </a>
                </td>
            </tr>
        </table>

        <a asp-action="Index" asp-controller="Home" class="btn btn-primary mt-3">Home</a>
    </div>
}

