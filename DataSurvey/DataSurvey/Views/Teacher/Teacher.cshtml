@model DataSurvey.Models.Instructor
@{
    ViewData["Title"] = "Teacher Make A Survey";

    // Get students from ViewBag
    var students = ViewBag.Students as List<DataSurvey.Models.Student>;

    // Selected instructor ID
    int selectedInstructorId = 0;

    // Safely parse from ViewBag
    if (ViewBag.selectedInstructorId != null)
    {
        int.TryParse(ViewBag.selectedInstructorId.ToString(), out selectedInstructorId);
    }

    // Find the selected instructor
    var selectedTeacher = ViewBag.Teachers as List<DataSurvey.Models.Instructor>;
    var teacher = selectedTeacher?.FirstOrDefault(t => t.InstructorId == selectedInstructorId);
    string teacherName = ViewBag.SelectedInstructor ?? teacher?.Name ?? string.Empty;
}

<div class="text-center">
    <h2>@ViewData["Title"]</h2>
    <p>Welcome, please select your Students for this semester</p>
</div>

<form method="get" asp-action="Teacher" asp-controller="Teacher" class="text-center">
    <div class="form-group mb-4">
        <label for="InstructorId">Select Teacher:</label>
        <select id="InstructorId" name="instructorId" class="form-control" style="max-width: 300px; margin: 0 auto;"
                onchange="this.form.submit()">
            <option value="">-- Select a teacher --</option>
            @foreach (var teacher in ViewBag.Teachers)
            {
                <option value="@teacher.InstructorId">@teacher.Name</option>
            }
        </select>
    </div>
</form>

<form asp-action="SubmitSurvey" method="post" class="text-center">
    <input type="hidden" name="InstructorId" value="@selectedInstructorId" />

    <div>
        <label for="surveyName">Enter Survey Name</label>
        <input type="text" id="surveyName" name="surveyName" class="form-control"
               style="max-width: 300px; margin: 10px auto;" />
    </div>

    @if (!string.IsNullOrWhiteSpace(teacherName))
    {
        <div class="mt-2 mb-4">
            <strong>Selected Teacher:</strong> @teacherName
        </div>
    }

    <div class="container mt-4">
        <div class="row text-start">
            @if (students != null && students.Any())
            {
                foreach (var student in students)
                {
                    <div class="col-md-3 mb-2">
                        <input type="checkbox" name="SelectedStudents" value="@student.StudentId"
                               @(ViewBag?.SelectedStudents?.Contains(student.StudentId) == true ? "checked" : "") />
                        @student.Name
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <p class="text-muted">No students available for the selected teacher's programs.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">Home</a>
    </div>
</form>
